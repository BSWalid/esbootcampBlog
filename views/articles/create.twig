



{% extends "dashboard.twig" %}

{% block css %}
{{ parent() }}
<link rel="stylesheet" href="/EsBootCamp-Blog/public/assets/css/style.css">

{% endblock %}

{% block content %}
    
<h1>Create a new Article</h1>
    <form method="POST" action="/dashboard/users/store">
  <div class="form-group row">
    <label for="username" class="col-2 col-form-label">Username</label>
    <div class="col-10">
      <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text">
            <i class="fa fa-user"></i>
          </div>
        </div>
        <input
          id="username"
          name="username"
          placeholder="Please enter your username"
          type="text"
          required="required"
          class="form-control"
        />
        <div class="input-group-append">
          <div class="input-group-text">
            <i class="fa"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <label for="name" class="col-2 col-form-label">Name</label>
    <div class="col-10">
      <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text">
            <i class="fa fa-user"></i>
          </div>
        </div>
        <input
          id="name"
          name="name"
          placeholder="Please Enter your name"
          type="text"
          required="required"
          class="form-control"
        />
      </div>
    </div>
  </div>
  <div class="form-group row">
    <label for="password" class="col-2 col-form-label">Password</label>
    <div class="col-10">
      <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text">
            <i class="fa fa-key"></i>
          </div>
        </div>
        <input
          id="password"
          name="password"
          placeholder="Please enter your password"
          type="text"
          required="required"
          class="form-control"
        />
      </div>
    </div>
  </div>
  <div class="form-group row">
    <label for="email" class="col-2 col-form-label">Email</label>
    <div class="col-10">
      <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text">
            <i class="fa fa-envelope"></i>
          </div>
        </div>
        <input
          id="email"
          name="email"
          placeholder="Please enter your Email"
          type="text"
          required="required"
          class="form-control"
        />
      </div>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-2">status</label>
    <div class="col-10">
      <div class="custom-control custom-radio custom-control-inline">
        <input
          name="status"
          id="status_0"
          type="radio"
          required="required"
          class="custom-control-input"
          value="True"
        />
        <label for="status_0" class="custom-control-label">active</label>
      </div>
      <div class="custom-control custom-radio custom-control-inline">
        <input
          name="status"
          id="status_1"
          type="radio"
          required="required"
          class="custom-control-input"
          value="False"
        />
        <label for="status_1" class="custom-control-label">inactive</label>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="offset-2 col-10">
      <button name="submit" type="submit" class="btn btn-primary">
        Create User
      </button>
    </div>
  </div>
</form>
{% endblock %}

