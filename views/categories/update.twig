{% extends "dashboard.twig" %} {% block css %}
{{ parent() }}
<link rel="stylesheet" href="/EsBootCamp-Blog/public/assets/css/style.css" />

{% endblock %} {% block content %}

<h1>Update The Category</h1>
<form method="POST" action="/EsBootCamp-Blog/dashboard/categories/update">
  <div class="form-group row">
    <label for="username" class="col-2 col-form-label">Name</label>
    <div class="col-10">
      <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text">
            <i class="fa fa-user"></i>
          </div>
        </div>
        <input
          id="name"
          name="name"
          placeholder="Please enter the name of category"
          type="text"
          required="required"
          class="form-control"
          value="{{category.name}}"
        />
        <div class="input-group-append">
          <div class="input-group-text">
            <i class="fa"></i>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="form-group row">
    <label for="category_description" class="col-2 col-form-label">Category Description</label>
    <div class="col-8">
      <textarea
        id="category_description"
        name="category_description"
        cols="40"
        rows="6"
        class="form-control"
      >{{category.category_description}}</textarea>
    </div>
  </div>

  <input type="hidden" name="category_id" value="{{category.category_id}}" ></input>
  
  <div class="form-group row">
    <div class="offset-2 col-10">
      <button type="submit" class="btn btn-primary">Update Category</button>
    </div>
  </div>
</form>
{% endblock %}
